-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
      %th= link_to 'Sort by Title', movies_path(:sort_by => :title, :id => :title_header)
      %th= link_to 'Sort by Date', movies_path(:sort_by => :release_date, :id => :release_date_header)
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
